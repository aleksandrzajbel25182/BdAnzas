        <Grid Grid.Row="2">
            <DataGrid Margin="20,20,20,20"
                      ItemsSource="{Binding Samples , Mode=TwoWay}"
                      SelectedItem="{Binding SelectedSamples, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      AutoGenerateColumns="False"
                      VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                      VirtualizingPanel.IsContainerVirtualizable="True"
                      VirtualizingPanel.ScrollUnit="Item">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader"
                           BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Style.Setters>
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center" />
                        </Style.Setters>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№ скважины"
                                        Binding="{Binding HoleId,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Профиль"
                                        Binding="{Binding Profile,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="От"
                                        Binding="{Binding From,Mode=OneWay}"
                                        MinWidth="60"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="До"
                                        Binding="{Binding To,Mode=OneWay}"
                                        MinWidth="60"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Длина интервала"
                                        Binding="{Binding Length,Mode=OneWay}"
                                        MinWidth="140"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Геологический номер"
                                        Binding="{Binding GeoSample,Mode=OneWay}"
                                        MinWidth="180"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Код породы"
                                        Binding="{Binding RockCode,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Вес пробы"
                                        Binding="{Binding Weight,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Тип пробы"
                                        Binding="{Binding SampleType,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Геолог"
                                        Binding="{Binding Geolog,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                    <DataGridTextColumn Header="Комментарии"
                                        Binding="{Binding NotesCommentsText,Mode=OneWay}"
                                        MinWidth="120"
                                        Width="20"
                                        CellStyle="{StaticResource CenterGridCell}" />
                </DataGrid.Columns>

            </DataGrid>
        </Grid>


    </Grid>

</UserControl>