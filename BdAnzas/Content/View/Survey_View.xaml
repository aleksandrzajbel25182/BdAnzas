<UserControl x:Class="BdAnzas.Content.View.Survey_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BdAnzas.Content.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CkekedAlL"
               TargetType="CheckBox"
               BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Foreground"
                    Value="Black"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=AllCheked,Path=IsChecked}"
                             Value="True">
                    <Setter Property="IsChecked"
                            Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="675*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock  Text="ИНКЛИНОМЕТРИЯ"
                        FontSize="20"
                        Margin="20" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <materialDesign:Card Width="625"
                                 Margin="20,0,0,0"
                                 Height="130"
                                 Background="#4B56C0">
                <StackPanel>
                    <StackPanel>
                        <Label  Content="Поиск"
                                FontSize="20"
                                Foreground="White"
                                Margin="20,10,0,0" />

                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Height="90">

                        <TextBox Margin="20,10,0,0"
                                 Width="240"
                                 BorderBrush="White"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource StyleOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Что ищем? "
                                 materialDesign:HintAssist.FloatingScale="1" />
                        <ComboBox Style="{StaticResource StyleOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Фильтр поиска"
                                  materialDesign:HintAssist.FloatingScale="1"
                                  VerticalAlignment="Top"
                                  Width="180"
                                  Margin="20,10,0,15" />
                        <Button Style="{StaticResource StyleButton}"
                                VerticalAlignment="Top"
                                Margin="20,10,0,15"
                                Width="120"
                                Height="50"
                                FontSize="16"
                                Content="Искать" />
                    </StackPanel>
                </StackPanel>

            </materialDesign:Card>
            <materialDesign:Card Width="400"
                                 Margin="50,0,0,0"
                                 Height="130"
                                 Background="#4B56C0">
                <StackPanel>
                    <StackPanel>
                        <Label  Content="Главная"
                                FontSize="20"
                                Foreground="White"
                                Margin="20,10,0,0" />

                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Height="90">

                        <ComboBox Style="{StaticResource StyleOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Отображение столбцов   "
                                  materialDesign:HintAssist.FloatingScale="1"
                                  VerticalAlignment="Top"
                                  Width="200"
                                  Margin="20,20,0,0"
                                  Foreground="White">
                            <CheckBox x:Name="AllCheked"
                                      Content="Все столбцы"
                                      Foreground="Black"
                                      IsChecked="True" />

                            <CheckBox x:Name="HoleIdCheked"
                                      Content="№ скважины"
                                      Style="{StaticResource CkekedAlL}">
                            </CheckBox>

                            <CheckBox x:Name="TypeLcodeCheked"
                                      Content="Тип выработки"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="PlaceSiteCheked"
                                      Content="Название участка"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="ProfileCheked"
                                      Content="Номер ПЛ"
                                      Style="{StaticResource CkekedAlL}" />

                            <CheckBox x:Name="EastingCheked"
                                      Content="Долгота"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="NorthingCheked"
                                      Content="Широта"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="ElevationCheked"
                                      Content="Абс. отм."
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="DiamCheked"
                                      Content="Диаметр бурения"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="AzimuthCheked"
                                      Content="Азимут ист"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="DipCheked"
                                      Content="Угол наклона от горизонта"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="DepthCheked"
                                      Content="Глубина скважины"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="UrovenCheked"
                                      Content="Уровень ПВ"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="UrAbsCheked"
                                      Content="Абс. отм. уровня"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="StartDateCheked"
                                      Content="Начало бурения"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="EndDateCheked"
                                      Content="Окончание бурения"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="GeologCheked"
                                      Content="Геолог"
                                      Style="{StaticResource CkekedAlL}" />
                            <CheckBox x:Name="NotesCheked"
                                      Content="Примечания"
                                      Style="{StaticResource CkekedAlL}" />

                        </ComboBox>
                        <!--<CheckBox x:Name="showImperial"
                                  Content="Show Details" />-->

                        <Button Style="{StaticResource StyleCircleButton}"
                                VerticalAlignment="Top"
                                Margin="20,20,15,0"
                                Command="{Binding EditItemCommand}">
                            <Image Source="/Resources/Icons/edit.png"
                                   Height="20" />
                        </Button>
                        <Button Style="{StaticResource StyleCircleButton}"
                                Margin="0,20,15,0"
                                VerticalAlignment="Top"
                                Command="{Binding AddItemCommand}">
                            <Image Source="/Resources/Icons/add.png"
                                   Height="20" />
                        </Button>
                        <Button Style="{StaticResource StyleCircleButton}"
                                Margin="0,20,0,0"
                                VerticalAlignment="Top">
                            <Image Source="/Resources/Icons/delete.png"
                                   Height="20" />
                        </Button>

                    </StackPanel>
                </StackPanel>

            </materialDesign:Card>
        </StackPanel>
        <TabControl  Grid.Row="2">
            <TabItem Header="Скважина">
                <StackPanel Orientation="Vertical"
                            Grid.Row="2">
                    <DataGrid Margin="20,20,20,20"
                              ItemsSource="{Binding Rocks , Mode=TwoWay}"
                              SelectedItem="{Binding SelectedRocks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Style.Setters>
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Center" />
                                </Style.Setters>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ скважины"
                                                Binding="{Binding Hole.HoleId,Mode=OneWay}"
                                                MinWidth="120"
                                                Width="20"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference HoleIdCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <DataGridTextColumn Header="Глубина"
                                                Binding="{Binding From ,Mode=OneWay}"
                                                MinWidth="100"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference FromCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Угол наклона от вертикали"
                                                Binding="{Binding To,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference ToCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз_магн_исходный,°"
                                                Binding="{Binding Length,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference LengthCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз. мг. принятый"
                                                Binding="{Binding Kernm,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference KernmCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз_ист_принятый, °"
                                                Binding="{Binding Kernpc,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference KernpcCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox Text="{Binding SelectedRocks.Description}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="20,20,20,20"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Описание керна "
                             materialDesign:HintAssist.FloatingScale="1" />


                </StackPanel>
            </TabItem>
            <TabItem Header="Трашеи">
                <StackPanel Orientation="Vertical"
                            Grid.Row="2">


                    <DataGrid Margin="20,20,20,20"
                              ItemsSource="{Binding Rocksroute , Mode=TwoWay}"
                              SelectedItem="{Binding SelectedRocksRoute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Style.Setters>
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Center" />
                                </Style.Setters>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ скважины"
                                                Binding="{Binding Hole.HoleId,Mode=OneWay}"
                                                MinWidth="120"
                                                Width="20"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference HoleIdCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <DataGridTextColumn Header="Глубина"
                                                Binding="{Binding From ,Mode=OneWay}"
                                                MinWidth="100"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference FromCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Угол наклона от вертикали"
                                                Binding="{Binding To,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference ToCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз_магн_исходный,°"
                                                Binding="{Binding Length,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference LengthCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз. мг. принятый"
                                                Binding="{Binding Kernm,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference KernmCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз_ист_принятый, °"
                                                Binding="{Binding Kernpc,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference KernpcCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="20,20,20,20"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Описание керна "
                             materialDesign:HintAssist.FloatingScale="1"
                             Text="{Binding SelectedRocksRoute.Description}" />


                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
