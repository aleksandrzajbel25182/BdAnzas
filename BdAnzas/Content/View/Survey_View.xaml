<UserControl x:Class="BdAnzas.Content.View.Survey_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BdAnzas.Content.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CkekedAlL"
               TargetType="CheckBox"
               BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Foreground"
                    Value="Black"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=AllCheked,Path=IsChecked}"
                             Value="True">
                    <Setter Property="IsChecked"
                            Value="True" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="200*" />
            <RowDefinition Height="675*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock  Text="ИНКЛИНОМЕТРИЯ"
                        FontSize="20"
                        Margin="20" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal">
            <materialDesign:Card Width="625"
                                 Margin="20,0,0,0"
                                 Height="130"
                                 Background="#4B56C0">
                <StackPanel>
                    <StackPanel>
                        <Label  Content="Поиск"
                                FontSize="20"
                                Foreground="White"
                                Margin="20,10,0,0" />

                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Height="90">

                        <TextBox Margin="20,10,0,0"
                                 Width="240"
                                 BorderBrush="White"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource StyleOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Что ищем? "
                                 materialDesign:HintAssist.FloatingScale="1" />
                        <ComboBox Style="{StaticResource StyleOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Фильтр поиска"
                                  materialDesign:HintAssist.FloatingScale="1"
                                  VerticalAlignment="Top"
                                  Width="180"
                                  Margin="20,10,0,15" />
                        <Button Style="{StaticResource StyleButton}"
                                VerticalAlignment="Top"
                                Margin="20,10,0,15"
                                Width="120"
                                Height="50"
                                FontSize="16"
                                Content="Искать" />
                    </StackPanel>
                </StackPanel>

            </materialDesign:Card>
            <materialDesign:Card Width="400"
                                 Margin="50,0,0,0"
                                 Height="130"
                                 Background="#4B56C0">
                <StackPanel>
                    <StackPanel>
                        <Label  Content="Главная"
                                FontSize="20"
                                Foreground="White"
                                Margin="20,10,0,0" />

                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Height="90">

                        <ComboBox Style="{StaticResource StyleOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Отображение столбцов   "
                                  materialDesign:HintAssist.FloatingScale="1"
                                  VerticalAlignment="Top"
                                  Width="200"
                                  Margin="20,20,0,0"
                                  Foreground="White">
                            <CheckBox x:Name="AllCheked"
                                      Content="Все столбцы"
                                      Foreground="Black"
                                      IsChecked="True" />

                            <CheckBox x:Name="HoleIdCheked"
                                      Content="№ скважины"
                                      Style="{StaticResource CkekedAlL}">
                            </CheckBox>

                            <CheckBox x:Name="DepthCheked"
                                      Content="Глубина"
                                      Style="{StaticResource CkekedAlL}" />

                            <CheckBox x:Name="InclinCheked"
                                      Content="Угол наклона от вертикали"
                                      Style="{StaticResource CkekedAlL}" />

                            <CheckBox x:Name="AzMagnCheked"
                                      Content="Аз_магн_исходный,°"
                                      Style="{StaticResource CkekedAlL}" />

                            <CheckBox x:Name="AzimPrCheked"
                                      Content="Аз. мг. принятый"
                                      Style="{StaticResource CkekedAlL}" />

                            <CheckBox x:Name="AzimIstCheked"
                                      Content="Аз_ист_принятый, °"
                                      Style="{StaticResource CkekedAlL}" />


                        </ComboBox>
                      

                        <Button Style="{StaticResource StyleCircleButton}"
                                VerticalAlignment="Top"
                                Margin="20,20,15,0"
                                Command="{Binding EditItemCommand}">
                            <Image Source="/Resources/Icons/edit.png"
                                   Height="20" />
                        </Button>
                        <Button Style="{StaticResource StyleCircleButton}"
                                Margin="0,20,15,0"
                                VerticalAlignment="Top"
                                Command="{Binding AddItemCommand}">
                            <Image Source="/Resources/Icons/add.png"
                                   Height="20" />
                        </Button>
                        <Button Style="{StaticResource StyleCircleButton}"
                                Margin="0,20,0,0"
                                VerticalAlignment="Top"
                                Command="{Binding AddItemCommand}">
                            <Image Source="/Resources/Icons/delete.png"
                                   Height="20" />
                        </Button>

                    </StackPanel>
                </StackPanel>

            </materialDesign:Card>
        </StackPanel>
        <Grid  Grid.Row="2">
            <TabControl>


                <TabItem Header="Скважин">
                  
                    <DataGrid Margin="20,20,20,20"
                              ItemsSource="{Binding SyrveyDrill }"
                              SelectedItem="{Binding SelectedSyrveyDrill, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False"
                             
                              VirtualizingStackPanel.IsVirtualizing="true"
                              VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                              VirtualizingPanel.IsContainerVirtualizable="True"
                              VirtualizingPanel.ScrollUnit="Item">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Style.Setters>
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Center" />
                                </Style.Setters>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ скважины"
                                                Binding="{Binding Hole.HoleId,Mode=OneWay}"
                                                MinWidth="120"
                                                Width="20"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference HoleIdCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <DataGridTextColumn Header="Глубина"
                                                Binding="{Binding Depth ,Mode=OneWay}"
                                                MinWidth="100"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference DepthCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Угол наклона от вертикали"
                                                Binding="{Binding Inclin,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference InclinCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз_магн_исходный,°"
                                                Binding="{Binding AzMagn,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference AzMagnCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз. мг. принятый"
                                                Binding="{Binding AzimPr,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference AzimPrCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <DataGridTextColumn Header="Аз_ист_принятый, °"
                                                Binding="{Binding AzimIst,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                Visibility="{Binding Source={x:Reference AzimIstCheked},
                                                                    Path=IsChecked, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </DataGrid.Columns>
                    </DataGrid>



                </TabItem>
                <TabItem Header="Траншеи">                

                        <DataGrid Margin="20,20,20,20"
                              ItemsSource="{Binding SyrveyTrench , Mode=TwoWay}"
                              SelectedItem="{Binding SelectedSyrveyTrench, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              AutoGenerateColumns="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader"
                                   BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Style.Setters>
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Center" />
                                </Style.Setters>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ выработки"
                                                Binding="{Binding Hole.HoleId,Mode=OneWay}"
                                                MinWidth="120"
                                                Width="20"
                                                CellStyle="{StaticResource CenterGridCell}"
                                             />

                            <DataGridTextColumn Header="Номер точки поворота"
                                                Binding="{Binding NumTp ,Mode=OneWay}"
                                                MinWidth="100"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                               />
                            <DataGridTextColumn Header="Длина канавы,м"
                                                Binding="{Binding Length,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                />
                            <DataGridTextColumn Header="Азимут магн. полевой, °"
                                                Binding="{Binding AzMagn,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                               />
                            <DataGridTextColumn Header="Глубина канавы,м"
                                                Binding="{Binding Depth,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                                 />
                            <DataGridTextColumn Header="Долгота"
                                                Binding="{Binding Easting,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}"
                                              />

                            <DataGridTextColumn Header="Абс. отм."
                                                Binding="{Binding Elevation,Mode=OneWay}"
                                                MinWidth="200"
                                                Width="*"
                                                CellStyle="{StaticResource CenterGridCell}" />
                        </DataGrid.Columns>
                    </DataGrid>
                        <!--<TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="20,20,20,20"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Описание керна "
                             materialDesign:HintAssist.FloatingScale="1"
                             Text="{Binding SelectedRocksRoute.Description}" />-->


                  
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</UserControl>
